<h3>Welcome,<strong> <%=current_user.username %></strong></h3>

<p>Your cars are listed below: </p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Car_id</th>
      <th scope="col">Make</th>
      <th scope="col">Model</th>
      <th scope="col">Color</th>
      <th scope="col">Type</th>
      <th scope="col">Price</th>
      <th scope="col">Salesperson</th>
    </tr>
  </thead>

  <tbody> 
    <% @cars.each do |car| %>
    <tr>
      <td><a href="/cars/<%= car.id %>"><%= car.id %></a></td>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.color %></td>
      <td><%= car.car_type %></td>
      <td><%= car.price %></td>
      <td><%= car.user.first_name %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>

<br>

<a href="/cars/new">create a new car</a>
